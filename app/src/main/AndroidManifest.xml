<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.surfapp">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:allowBackup="true"
            android:icon="@drawable/surflogo"
            android:label="SurfApp"
            android:roundIcon="@drawable/surflogo"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:largeHeap="true">
        <activity android:name="com.example.surfapp.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.example.surfapp.LoginActivity"></activity>
        <activity android:name="com.example.surfapp.MainActivity"></activity>

        <meta-data
                android:name="preloaded_fonts"
                android:resource="@array/preloaded_fonts" />
    </application>

</manifest>