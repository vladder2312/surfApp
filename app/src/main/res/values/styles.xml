<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorBackgroundLighter</item>
    </style>

    <style name="button">
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@drawable/main_button</item>
        <item name="android:topRightRadius">4dp</item>
        <item name="android:topLeftRadius">4dp</item>
    </style>

    <style name="textField">
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@drawable/text_field</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColorLink">@color/colorBlue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/colorTextFieldGrayText</item>
    </style>

    <style name="toolbar">
        <item name="android:textCursorDrawable">@color/colorBlue</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="searchIcon">@drawable/icon_search</item>
        <item name="closeIcon">@drawable/icon_close</item>
        <item name="queryHint">@string/search_hint</item>
        <item name="android:imeActionId">6</item>
    </style>

</resources>
