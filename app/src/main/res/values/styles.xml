<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button">
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@drawable/main_button</item>
        <item name="android:topRightRadius">4dp</item>
        <item name="android:topLeftRadius">4dp</item>
    </style>

    <style name="textField">
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@drawable/text_field</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColorLink">@color/colorButton</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/colorTextFieldGrayText</item>
    </style>

</resources>
